<!DOCTYPE html>
<html>

<head>
  <title>News</title>
  <link rel="stylesheet" type="text/css" href="/assets/css/main.css">
  <meta name="viewport" content="width=device-width">
  <meta charset="utf-8">
  <link href="https://fonts.googleapis.com/css?family=Audiowide" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Roboto:500,700" rel="stylesheet">
  <script src="https://use.fontawesome.com/886e67ac7b.js"></script>
  <script src="../app.js"></script>
</head>

<body>
  <nav>
    <h2>FILMERIAN</h2>
    <ul>
      <li><a href="#"><i class="fa fa-newspaper-o fa-fw" aria-hidden="true"></i>&nbsp;Nyheter</a></li>
      <li><a href="#"><i class="fa fa-desktop fa-fw" aria-hidden="true"></i>&nbsp;Recensioner</a></li>
    </ul>
  </nav>
  <% for (var i = 0; i < news.length; i++){ %>
    <!-- <% if (req.params.id == news[i]){ %> -->
    <div class="news-card-item" style="background: url('<%= news[i].picture %>') no-repeat center">
      <a href="">
        <h2><%= news[i].content.title  %></h2>
        <div class="content">
          <p>
            <%= news[i].content.summary %>
          </p>
        </div>
      </a>
    </div>
    <% } %>
  <!-- <% } %> -->
</body>

</html>
